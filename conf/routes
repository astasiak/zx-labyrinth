GET     /                        controllers.ZxController.index
POST    /games                   controllers.ZxController.createGame
GET     /games/:id/ws            controllers.ZxController.gameWs(id)
GET     /games/:id               controllers.ZxController.game(id)
GET     /games/:id/again         controllers.ZxController.again(id)

POST    /login                   controllers.ZxController.login()
GET     /logout                  controllers.ZxController.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
